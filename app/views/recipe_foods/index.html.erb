<div class="container">
  <% if notice.present? %>
    <p class="alert-success"><%= notice %></p>
  <% end %>

  <h1>Recipe foods</h1>

  <div class="recipe_foods">
    <% @recipe_foods.each do |recipe_food| %>
      <%= render recipe_food %>
      <p>
        <%= link_to "Show this recipe food", recipe_food %>
      </p>
    <% end %>
  </div>

  <%= link_to "New recipe food", new_recipe_food_path, class: "btn btn-primary my-4" %>
</div>
