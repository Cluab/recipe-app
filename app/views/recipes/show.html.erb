<div id="recipe">
<h1> <%= @recipe.name %></h1>
  <div>
  <div>
   <p>Preparation time <%=@recipe.preparation_time %></p>
  <p>Cooking time <%=@recipe.cooking_time %></p>
  <p>steps <%=@recipe.description %></p>
  </div>
 <% if can? :update, @recipe %>
<%= button_to(@recipe.public? ? "Make Private" : "Make Public", toggle_recipe_privacy_path(@recipe), method: :put) %>
<% end %>
 </div>
  <div>
   <%= button_to "Generate shopping list"%>
   <% if can? :create, @recipe %>
    <%= link_to "Add ingredient",  new_recipe_recipe_food_path(@recipe)%>
    <% end %>
    </div>
<div>
</div>
  
<div id="shopping_table">
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @food_recipe.each do |recipe_food| %>
        <tr id="<%= dom_id recipe_food %>">
          <td><%= recipe_food.food.name %></td>
          <td><%= recipe_food.quantity %></td>
          <td><%= recipe_food.food.price * recipe_food.quantity %></td>
          <td><%= button_to "Delete", recipe_recipe_food_path(@recipe, recipe_food), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


